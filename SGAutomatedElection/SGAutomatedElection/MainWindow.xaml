<Window x:Class="SGAutomatedElection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project ACE" Height="500" Width="900" Background="Silver">
    <Grid>
        <Grid x:Name="gridLogin" Visibility="Visible">
            <PasswordBox HorizontalAlignment="Left" Margin="362,247,0,0" VerticalAlignment="Top" Width="177" Height="25"
                         Foreground="Gray" FontStyle="Italic" Password="******"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="25" Margin="362,206,0,0" TextWrapping="Wrap" 
                     VerticalAlignment="Top" Width="177" Foreground="Gray" FontStyle="Italic" Text="Enter Username"/>
            <Button x:Name="btnLogin" Content="Log In" HorizontalAlignment="Left" Margin="400,300,0,0" VerticalAlignment="Top" Width="75" Cursor="Hand" Click="btnLogin_Click"/>
            <Image HorizontalAlignment="Left" Height="144" Margin="362,41,0,0" VerticalAlignment="Top" Width="177"/>

        </Grid>
        <Grid x:Name="gridStudent" Visibility="Collapsed">

        </Grid>
        <Grid x:Name="gridViewPartialResults" Visibility="Collapsed">

        </Grid>
        <Grid x:Name="gridTeacher" Visibility="Collapsed">

        </Grid>
        <Grid x:Name="gridAdmin" Visibility="Collapsed" Height="473" VerticalAlignment="Bottom" Margin="10,0,-10,0">
            <Label Content="Administrator Control Panel" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>
            <StackPanel HorizontalAlignment="Left" Height="150" Margin="215,193,0,0" VerticalAlignment="Top" Width="459" Orientation="Horizontal">
                <Button x:Name="btnViewCandidates" Width="150" Height="150" BorderThickness="0" Margin="0,0,5,0" Background="Gray" MouseEnter="btnViewCandidates_MouseEnter" Cursor="Hand" MouseLeave="btnViewCandidates_MouseLeave">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images\search.png" Width="150" Height="150"/>
                        <TextBlock Text="text" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnManage" Width="150" Height="150" BorderThickness="0" Margin="0,0,5,0" Background="Gray" MouseEnter="btnManage_MouseEnter" Cursor="Hand" MouseLeave="btnManage_MouseLeave"/>
                <Button x:Name="btnElectoralResults" Width="150" Height="150" BorderThickness="0" Margin="0,0,5,0" Background="Gray" MouseEnter="btnElectoralResults_MouseEnter" Cursor="Hand" MouseLeave="btnElectoralResults_MouseLeave">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images\barchart.png" Width="150" Height="150"/>
                        <TextBlock Text="text" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Button x:Name="btnALogout" Width="30" Height="30" BorderThickness="0" HorizontalAlignment="Left" Margin="801,68,0,0" VerticalAlignment="Top" Background="Transparent" Cursor="Hand" Click="btnALogout_Click" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\logout2.png" Width="30" Height="30"/>
                    <TextBlock Text="text" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Label x:Name="lblLogout" Content="Logout" HorizontalAlignment="Left" Margin="748,68,0,0" VerticalAlignment="Top"/>

        </Grid>
        <Grid x:Name="gridManageMain" Visibility="Collapsed">
            <Label Content="Account Management Panel" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>
            <StackPanel HorizontalAlignment="Left" Height="190" Margin="244,170,0,0" VerticalAlignment="Top" Width="380">
                <Button x:Name="btnMStudents" Content="Manage Students" Margin="0,5,0,0" Height="56" Click="btnMStudents_Click"/>
                <Button x:Name="btnMTeachers" Content="Manage Teachers" Margin="0,5,0,0" Height="56" Click="btnMTeachers_Click"/>
                <Button x:Name="btnMAdmins" Content="Manage Administrators" Margin="0,5,0,0" Height="56" Click="btnMAdmins_Click"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="gridManageStudents" Visibility="Collapsed">
            <Label Content="Manage Student Account" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>
            

        </Grid>
        <Grid x:Name="gridManageTeachers" Visibility="Collapsed">
            <Label Content="Manage Teacher Account" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>

        </Grid>
        <Grid x:Name="gridManageAdmins" Visibility="Collapsed">
            <Label Content="Manage Administrator Account" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>

        </Grid>
        <!--All grids below concern the Electoral Process and Registration-->
        <Grid x:Name="gridRegisterParty" Visibility="Collapsed">
            <Label Content="Register New Party" Margin="40,60,40,0" VerticalAlignment="Top" FontFamily="Segoe UI LIght" FontSize="26" BorderThickness="0,0,0,1" BorderBrush="Black"/>

        </Grid>
        <Grid x:Name="gridElectoralResults" Visibility="Collapsed">

        </Grid>
    </Grid>
</Window>
